---
import { LEGACY_ASTRO_CONFIG_KEYS } from "astro/dist/core/config/config";
import "../styles/global.css";
import Singleview from "./Singleview.astro";
const { navn, billede, link, stage, japansk, day } = Astro.props;
---

<article class={"theCard " + day}>
  <a href={link}
    ><div class="img_container">
      <img src={billede} alt="billede" />
      <p>{stage}</p>
    </div></a
  >
  <a href={link}>
    <section>
      <div class="overskrift">
        <h3>{navn}</h3>
        <a href={link}><h3 class="arrow">&#8594;</h3></a>
      </div>
      <h4>{japansk}</h4>
    </section>
  </a>
</article>

<style>
  article {
    width: 310px;
    margin: 20px 0;
    height: max-content;
    overflow: hidden;
  }

  img {
    width: 267px;
    height: 216px;
    left: 0px;
    overflow: hidden;
  }

  .overskrift {
    display: flex;
    justify-content: space-between;
    margin-top: -5%;
  }

  h4 {
    font-size: 20px;
    font-family: "Poppins", sans-serif;
    font-weight: 400;
    line-height: 45px;
    color: var(--red-medium);
    margin-top: -12%;
  }
  h3 {
    font-family: "Poppins", sans-serif;
    font-size: 25px;
    font-weight: 500;
    letter-spacing: 0em;
    text-align: left;

    color: var(--red-dark);
    padding: 49px 0 23px 0;
  }
  .arrow {
    font-size: 35px;
    margin-left: -20%;
  }
  .arrow:hover {
    scale: 0.8;
  }
  p {
    font-family: "Poppins", sans-serif;
    font-size: 15px;
    font-weight: 500;
    color: black;
    background-color: var(--beige-dark);
    text-transform: uppercase;
    text-align: left;
    padding: 1rem;
    margin-top: -1%;
    max-width: 86%;
  }

  .hide {
    display: none;
  }

  @media (min-width: 1200px) {
    article {
      width: 500px;
      height: fit-content;
    }
    img {
      aspect-ratio: 3/2;
      width: 100%;
      height: auto;
    }

    h3 {
      font-weight: 400;
      font-size: 40px;
      line-height: 60px;
    }

    p {
      max-width: 100%;
      font-size: 20px;
    }

    h4 {
      margin-top: -5%;
    }
    .arrow {
      font-size: 50px;
    }
  }

  @media (min-width: 1500px) {
    article {
      width: 600px;
      height: fit-content;
    }
    p {
      font-family: "Poppins", sans-serif;
      font-size: 20px;
      font-weight: 500;
      color: black;
      background-color: var(--beige-dark);
      text-transform: uppercase;
      text-align: left;
      padding: 1rem;
      margin-top: -1%;
      max-width: 110%;
    }
    h4 {
      margin-top: -5%;
      font-size: 27px;
    }
    h3 {
      font-family: "Poppins", sans-serif;
      font-size: 30px;
      font-weight: 500;
      letter-spacing: 0em;
      text-align: left;

      color: var(--red-dark);
      padding: 49px 0 23px 0;
    }
    .arrow {
      font-size: 50px;
    }
  }
</style>
