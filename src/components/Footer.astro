<style>
  /* extra light = 200, regular = 400, medium = 500, bold = 700 */
  @import url("https://fonts.googleapis.com/css2?family=Poppins:wght@200;400;500;700&display=swap");

  footer {
    background-color: #7c2d22;
    padding: 2% 5%;
  }

  .grid {
    display: grid;
    gap: 5vw;
  }

  .ul-links {
    grid-row: 1;
  }

  .some-links {
    grid-row: 3;
    justify-self: center;
  }
  .contact {
    grid-row: 2;
    justify-self: center;
    text-align: center;
  }

  ul {
    display: flex;
    justify-content: space-around;
  }

  li {
    list-style: none;
    line-height: 5em;
    font-weight: bold;
    /* margin: 0 20px; */
  }

  .logo {
    display: flex;
    justify-content: space-evenly;
    /* margin-top: 30%; */
  }

  .logo img {
    width: 10vw;
    min-width: 40px;
    max-width: 80px;
  }
  h1 {
    color: var(--beige-dark);
    font-family: "Poppins", sans-serif;
    font-weight: 500;
    font-size: 16px;
    margin: 1vw 0 0;
  }
  h3 {
    color: var(--beige-dark);
    font-family: "Poppins", sans-serif;
    font-size: 1rem;
    font-weight: 700;
  }
  p {
    color: #e2d5c3;
    font-family: "Poppins", sans-serif;
    font-weight: 200;
    font-size: 12px;
    margin: 2vw 0 0;
  }

  li a {
    color: var(--beige-dark);
    font-family: "Poppins", sans-serif;
    font-size: 12px;
  }

  @media (min-width: 600px) {
    li a,
    p {
      font-size: 16px;
    }
    h3 {
      font-size: 1.5rem;
    }
    h1 {
      font-size: 24px;
    }
  }

  @media (min-width: 900px) {
    ul {
      margin: 0 10vw;
    }
  }
  @media (min-width: 1200px) {
    footer {
      padding: 50px;
      margin-top: 5%;
    }

    .grid {
      display: grid;
      grid-template-columns: repeat(3, 1fr);
      gap: 5vw;
    }

    .contact {
      grid-column: 3;
      grid-row: 1;
      text-align: left;
    }

    .some-links {
      grid-column: 2;
      grid-row: 1;

      display: flex;
      flex-direction: column;
      justify-content: center;
      text-align: center;
    }

    ul {
      flex-direction: column;
    }

    li {
      line-height: 5em;
    }

    .logo {
      display: flex;
      justify-content: space-evenly;
      margin-top: 30%;
    }

    h1 {
      margin-top: 25%;
    }
    h3 {
      margin-top: 10%;
    }
    p {
      margin-top: 15%;
    }
  }

  @media (min-width: 1500px) {
    h1 {
      font-size: 30px;
    }
  }
</style>
