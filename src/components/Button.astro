---
import "../styles/global.css";
const { variant = "primary", size = "medium" } = Astro.props;
const { title } = Astro.props;
---

<button data-variant={variant} data-size={size}>
  <a href={}>{title}</a>
</button>

<style>
  button {
    border: none;
    box-shadow: 0px 1px 12px rgba(0, 0, 0, 0.25);
  }

  button:hover {
    transform: scale(0.9);
  }
  /* 
  --black: #000000;
  --brown: #5f2a0d;
  --red-dark: #79241f;
  --red-medium: #b43830;
  --red-light: #d2625a;
  --beige-dark: #e2d5c3;
  --beige-medium: #f6f1e9;
  --beige-light: #f5f5f5;
  --pink-medium: #e8d0ce;
  --pink-light: #f1e9e8;

  --dropshadow: 0px 1px 12px rgba(0, 0, 0, 0.25); 
  */

  /* sizes */
  [data-size="desktop"] {
    font-size: 20px;
    height: 65px;
  }

  [data-size="mobile"] {
    width: 120px;
    height: 33px;
    font-size: 10px;
  }

  /* Variants */
  [data-variant="program"] {
    width: 262px;
    border-radius: 11px;
    background-color: var(--beige-dark);
    color: var(--brown);
  }

  [data-variant="download"] {
    width: 262px;
    border-radius: 11px;
    background-color: var(--red-medium);
    color: white;
  }
  [data-variant="day"] {
    width: 206px;
    border-radius: 50px;
    background-color: var(--red-light);
    color: var(--beige-dark);
  }

  [data-variant="day-chosen"] {
    width: 206px;
    border-radius: 50px;
    background-color: var(--red-medium);
    color: var(--beige-dark);
  }

  a {
    font-weight: 700;
    font-family: "Poppins", sans-serif;
    letter-spacing: 0.15em;
  }
</style>
