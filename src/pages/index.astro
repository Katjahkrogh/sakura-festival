---
import Footer from "../components/Footer.astro";
import "../styles/global.css";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Landingpage</title>
  </head>
  <body>
    <header>
      <div id="nav_header">
        <h1>22-23. APRIL 2023</h1>

        <div class="hamburger">
          <div>
            <span class="line"></span>
            <span class="line"></span>
          </div>
        </div>
        <div class="hejhej">
          <nav class="menu">
            <a href="/pages/program-liste.astro">Program</a>
            <a href="#">Boder</a>
            <a href="#">Tilmedning af boder, frivillige eller akiviteter</a>
            <a href="/pages/about.astro">Om os</a>
          </nav>
        </div>
      </div>
      <div id="flex">
        <img src="/public/images/rødring.png" alt="rødring" width="50%" />
        <img src="/public/images/blomstergren.png" alt="blomstergren" id="blomst" />
        <div id="tekst_forside">
          <h1>SAKURA FESTIVAL</h1>
          <h2 class="celebrate">Celebrate the blooming...</h2>
          <h2>開花を祝う</h2>
        </div>
      </div>
      <div>
        <a href="#program" class="pil">&#8595;</a>
      </div>
    </header>
    <main>
      <div id="program_div">
        <div id="program">
          <h2>The festival program</h2>
          <button>Download here</button>
        </div>
        <div id="program_billeder">
          <img src="/public/images/flyer.webp" alt="blomstergren" width="50%" />
          <img src="/public/images/forside.png" alt="forside" width="25%" id="forside" />
        </div>
      </div>
      <div id="oplev">
        <h2>Experience</h2>
        <div class="oplev_grid">
          <div>
            <img src="/public/images/about/billede2.png" alt="blomstergren" />
          </div>
          <div>
            <img src="/public/images/about/billede2.png" alt="blomstergren" />
          </div>
          <div>
            <img src="/public/images/about/billede2.png" alt="blomstergren" />
          </div>
        </div>
        <div id="grid">
          <div>
            <img src="/public/images/about/billede2.png" alt="blomstergren" />
          </div>
          <div>
            <img src="/public/images/about/billede2.png" alt="blomstergren" />
          </div>
        </div>
      </div>

      <div id="youtube">
        <h2>Last years festival</h2>
      </div>
    </main>
  </body>
  <Footer />
</html>

<style>
  .pil {
    transition: 0.2s;
  }
  .oplev_grid {
    height: 100%;
    width: 100%;
    background-repeat: no-repeat;
    background-size: contain;
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
    gap: 1em;
    overflow: hidden;
    /* background-color: #79241f; */
  }
  .oplev_grid img {
    border-radius: 1em;
  }
  #forside {
    position: absolute;
    left: 59vw;
    top: 86vw;
  }
  #program_billeder {
    margin-top: 3em;
  }
  #grid {
    display: grid;
    grid-template-columns: 1fr 4fr;
  }
  .pil {
    color: var(--beige-dark);
    font-size: 6vw;
    display: flex;
    justify-content: flex-end;
    padding-right: 1em;
    font-weight: bolder;
  }
  .pil:hover {
    color: var(--red-medium);
    transition: 0.2s;
  }

  header {
    background-color: var(--red-dark);
    height: 70vw;
    width: 100%;
  }
  img {
    /* margin-top: 1em; */
  }

  #flex {
    display: flex;
  }
  #blomst {
    position: absolute;
    width: 51.5%;
    left: 13vw;
    transform: rotate(301deg);
  }
  .celebrate {
    font-size: 4vw;
    margin-bottom: 3vw;
  }
  #tekst_forside {
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    padding-left: 4vw;
    padding-bottom: 6em;
    z-index: 1;
  }

  #tekst_forside h1 {
    color: var(--beige-dark);
    font-family: Moyko;
    position: absolute;
    letter-spacing: 0.5vw;
    z-index: 1;
    top: 22vw;
    left: 33vw;
    font-size: 7vw;
  }
  #tekst_forside h2 {
    color: var(--beige-medium);
    font-size: 3.2vw;
  }

  #nav_header h1 {
    color: #e2d5c3;
    font-family: "Poppins", sans-serif;
    margin-right: 1em;
    font-size: 3vw;
    margin-top: 18px;
  }

  #nav_header {
    display: flex;
    justify-content: flex-end;
  }

  #nav_header {
    display: flex;
    padding: 1em;
  }
  .menu {
    display: block;
    position: fixed;
    top: 0;
    left: 100%;
    width: 31%;
    padding: 1em;
    transition: 0.4s;
    border-radius: 1em;
    margin-left: 45em;
    margin-top: 8em;
    padding: 1em;
    height: fit-content;
    background-color: var(--beige-medium);
  }
  .menu.isactive {
    left: 20vw;
    width: 23%;
  }

  .menu a {
    display: block;
    text-align: center;
    padding: 12px 16px;
    margin: 0 auto 16px;
    color: black;
    text-decoration: none;
    font-family: "Poppins", sans-serif;
    font-size: 2vw;
    height: fit-content;
  }
  .menu a:hover {
    background-color: var(--beige-dark);
  }

  .hamburger,
  .hamburger:after,
  .hamburger:before {
    height: 5px;
    background-color: var(--beige-medium);
    margin: 6px 0px;
    transition: 0.4s;
    content: "";
    display: block;
    overflow: initial;
  }

  .hamburger {
    position: relative;
    display: block;
    width: 45px;
    cursor: pointer;
    appearance: none;
    background: none;
    outline: none;
    border: none;
    align-self: self-start;
    margin-top: 2vw;
    height: 20px;
  }
  :root {
    --black: #000000;
    --brown: #5f2a0d;
    --red-dark: #79241f;
    --red-medium: #b43830;
    --red-light: #d2625a;
    --beige-dark: #e2d5c3;
    --beige-medium: #f6f1e9;
    --beige-light: #f5f5f5;
    --pink-medium: #e8d0ce;
    --pink-light: #f1e9e8;
  }

  @media (max-width: 960px) {
    #baggrund_header img {
      margin-bottom: 3em;
    }
  }

  @font-face {
    font-family: "Moyko";
    src: "../public/font/Moyko.ttf";
  }

  /* program */
  #program_div {
    display: grid;
    grid-template-columns: 1fr 1fr;
    justify-items: center;
    background-color: var(--beige-dark);
    height: 55vw;
  }

  #program {
    display: flex;
    flex-direction: column;
    justify-content: space-evenly;
    align-items: center;
  }

  button {
    background-color: var(--red-medium);
    padding: 1em;
    width: 16vw;
    border: none;
    border-radius: 1em;
    color: white;
    font-family: "Poppins";
    font-size: 1.4vw;
  }

  button:hover {
    background-color: var(--red-dark);
    cursor: pointer;
    transition: 0.2s;
  }
  h2 {
    font-family: "Poppins";
  }
  #program h2 {
    font-size: 3.2vw;
  }

  /* oplev */
  #oplev {
    background-color: white;
  }
  #oplev h2 {
    text-align: center;
    font-size: 3vw;
    margin-top: 1em;
    margin-bottom: 1em;
  }

  /* Youtube */

  #youtube h2 {
    text-align: center;
    font-size: 3vw;
  }
</style>
<script>
  window.onload = function () {
    const menu_btn = document.querySelector(".hamburger");

    const mobile_menu = document.querySelector(".menu");

    menu_btn.addEventListener("click", function () {
      menu_btn.classList.toggle("isactive");
      mobile_menu.classList.toggle("isactive");
    });
  };
</script>
